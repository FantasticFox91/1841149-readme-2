{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "customConditions": [
      "development"
    ],
    "paths": {
      "@project/libs/shared/app/types": [
        "libs/shared/app/types/src/index.ts"
      ],
      "@project/libs/shared/core": [
        "libs/shared/core/src/index.ts"
      ],
      "@project/libs/shared/helpers": [
        "libs/shared/helpers/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ]
}
